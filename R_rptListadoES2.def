Dim glngColor As Long
Private Sub Detalle_Print(Cancel As Integer, PrintCount As Integer)
    If PrintCount > 1 Then Exit Sub
    If glngColor = 16777215 Then
        glngColor = 15263976
    Else
        glngColor = 16777215
    End If
    Me.Section(0).BackColor = glngColor
End Sub

