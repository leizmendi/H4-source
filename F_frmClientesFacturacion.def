        strMDB_His = Nz(DLookup("Mdb_Historico", "tbcli_TickCab", "IdTickCab = " & lngIdTickCab), "")
        lngIdTickCab_His = Nz(DLookup("IdTickCab_Historico", "tbcli_TickCab", "IdTickCab = " & lngIdTickCab), 0)
