Private Sub btnF4_Click()
    Dim strSQL As String
    strSQL = "UPDATE sysBusquedas SET sysBusquedas.Predeterminada = False"
    strSQL = strSQL & " WHERE (((sysBusquedas.CodBusqueda) Like'" & gstrOpenArg & "*') AND Predeterminada = True);"
    CurrentDb.Execute strSQL, dbFailOnError
    strSQL = "UPDATE sysBusquedas SET sysBusquedas.Predeterminada = True"
    strSQL = strSQL & " WHERE (((sysBusquedas.CodBusqueda)='" & Me.btnF4.Tag & "'));"
    CurrentDb.Execute strSQL, dbFailOnError
    CargaLista
End Sub

Private Sub btnF5_Click()
    Static strBusq As String, intOtra As Integer
    Dim strXML As String
    PonXML strXML, "Titulo", "Busca en " & Me.lst.Column(1, 0) & ". Introduzca texto a buscar"
    PonXML strXML, "Display", strBusq
    DoCmd.OpenForm "frmTeclado", , , , , acDialog, strXML
    If Not IsOpenForm("frmTeclado") Then Exit Sub
    strBusq = Nz(Forms("frmTeclado")("txtDisplay"), "")
    DoCmd.Close acForm, "frmTeclado"
    If strBusq <> "" Then
        Dim rs As Recordset
        Set rs = CurrentDb.OpenRecordset(Me.lst.RowSource)
        If Me.lst.ListIndex <> -1 Then
            Select Case rs.Fields(0).Type
                Case dbText
                    rs.FindFirst rs(0).Name & " = '" & Me.lst & "'"
                Case dbDate
                    rs.FindFirst rs(0).Name & " = #" & Me.lst & "#"
                Case Else
                    rs.FindFirst rs(0).Name & " = " & Me.lst
            End Select
            If Not rs.NoMatch Then
                rs.MoveNext
            End If
        End If
        intOtra = False
OtraVez:
        While Not rs.EOF
            If Not rs.EOF Then
                If rs(1) Like "*" & ConAcentos(strBusq) & "*" Then
                    Me.lst = rs(0)
                    Exit Sub
                End If
            End If
            rs.MoveNext
        Wend
        If Not intOtra Then
            intOtra = True
            rs.MoveFirst
            GoTo OtraVez
        End If
    End If
End Sub

