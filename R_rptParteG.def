    Dim gintVerEtiquetasRL As Integer
    
Private Sub Detalle_Format(Cancel As Integer, FormatCount As Integer)
'    If Me.Detalle.BackColor = 16777215 Then
'        Me.Detalle.BackColor = 10092543
'    Else
