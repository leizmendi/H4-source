    If gintVerEtiquetasRL = 0 Then
        If Nz(DameValorParam("ParteG_VerEtiquetasRepasoLimpiezaSN"), True) = True Then
            gintVerEtiquetasRL = -1
        Else
            gintVerEtiquetasRL = 1
        End If
