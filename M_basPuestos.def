    '        gintHayServidor = True
    '    Else
    '        gintHayServidor = False
    '    End If
    'End If
    
    
Salir_Pon_glngMiPuesto:
    Exit Sub
Error_Pon_glngMiPuesto:
    Select Case Err
        Case Else
            MsgBox "Error nº " & Err & " en Pon_glngMiPuesto" & vbCrLf & Err.Description
            glngMiPuesto = 0
            Resume Salir_Pon_glngMiPuesto
    End Select
End Sub